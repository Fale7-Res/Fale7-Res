{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/sitemap.xml", "dest": "/public/sitemap.xml" },
    { "src": "/robots.txt", "dest": "/public/robots.txt" },

    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/app.js" }
  ]
}
